{
    "name": "typescript-parser-wrapper",
    "private": true,
    "dependencies": {
        "typescript": "4.0.2"
    },
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "check": "tsc --noEmit --project . && tslint --project .",
        "lint": "tslint --project .",
        "lint-fix": "tslint --project . --fix",
        "watch": "tsc -p . -w --sourceMap"
    },
    "devDependencies": {
        "@types/node": "12.7.11",
        "@types/npm-package-arg": "^6.1.0",
        "@types/pacote": "^11.1.0",
        "tslint": "^5.9.1"
    }
}
